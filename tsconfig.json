{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "composite": false,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "lib": [
            "esnext",
            "esnext.asynciterable",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": false,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "paths": {
            "~/*": [
                "./src/*"
            ]
        },
        "outDir": "./dist/",
        "removeComments": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": false,
        "target": "esnext",
        "jsx": "react",
        "types": [
            "@types/node"
        ],
        "skipLibCheck": false,
        "forceConsistentCasingInFileNames": false,
        "isolatedModules": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/queries/**/*.gql"
    ],
    "exclude": [
        "node_modules"
    ]
}
